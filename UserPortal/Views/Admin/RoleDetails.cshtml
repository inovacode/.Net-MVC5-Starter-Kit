@model CodeLib.ApplicationRole

@{
    ViewBag.Title = "Role Details";
}

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
@if (ViewBag.UserCount == 0)
{
    <hr />
    <i>No users found in this role.</i>
}

<table class="table" style="margin-top:40px;">
    <tr>
        <th>User Id</th>
        <th>Full Name</th>
        <th>Email</th>
    </tr>

    @foreach (var user in ViewBag.Users)
    {
        <tr>
            <td>
                @user.UserId
            </td>
            <td>
                @user.FullName
            </td>
            <td>
                @user.Email
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Edit", "RoleEdit", new { id = Model.Id }) &nbsp; | &nbsp;
    @Html.ActionLink("Back to List", "RolesMgmt")
</p>



